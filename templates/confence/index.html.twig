{% extends 'base.html.twig' %}

{% block title %}Conferences{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h2>Conferences</h2>
        <div>There are {{ conferences|length }} conferences</div>
        {% for conference in conferences %}
            <h3>Country: {{ conference.pais }}</h3>
            <h4>{{ conference }}</h4>
            <p>
                <a href="{{ path('conference_show', {'slug': conference.slug}) }}">View</a>
                <a href="{{ path('conference_del', {'id': conference.id}) }}">Delete</a>
            </p>
        {% endfor %}
    </div>
{% endblock %}
